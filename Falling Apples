#include <bits/stdc++.h>
using namespace std;

#define ll long long

ll dp[2004][2004];

ll f(ll i, ll j, ll n, vector<pair<ll, ll>> &a)
{
  int ind = max(i, j) + 1;
  if (ind == n + 2)
  {
    return 0;
  }
  if (dp[i][j] != -1)
  {
    return dp[i][j];
  }
  ll a1 = abs(a[ind].first - a[i].first) + abs(a[ind].second - a[i].second) + f(ind, j, n, a);
  ll b1 = abs(a[ind].first - a[j].first) + abs(a[ind].second - a[j].second) + f(i, ind, n, a);
  return dp[i][j] = min(a1, b1);
}

int main()

{
  int t;
  cin >> t;
  while (t--)
  {

    ll n;
    cin >> n;

    vector<pair<ll, ll>> a(n + 2);
    for (ll i = 0; i < n + 2; i++)
    {
      cin >> a[i].first >> a[i].second;
    }
    memset(dp,-1,sizeof(dp));
    cout << f(0, 1, n, a);
  }
  return 0;
}
